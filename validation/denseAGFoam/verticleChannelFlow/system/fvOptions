FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

momentumSource
{
	type            phaseIncompressibleMeanVelocityForce;
    active          on;            //on/off switch

    phaseIncompressibleMeanVelocityForceCoeffs
    {
        selectionMode   all;
        fieldNames      (U.gas);
        Ubar            (0 0.5 0);
        alphaName       alpha.gas;
        relaxation      0.2;                    // Optional relaxation factor
    }
}

