FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      populationaBalanceProperties.particles;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

populationBalanceModel velocity;

velocityCoeffs
{
    odeCoeffs
    {
        solveOde off;

        ATol    1.0e-6;
        RTol    1.0e-4;
        fac     0.9;
        facMin  0.1;
        facMax  5.0;
        minLocalDt 1.0e-4;
    }

    collision  on;

    collisionKernel
    {
        implicit yes;
        collisionKernel Boltzmann;
        e           0.97;
    }
}

