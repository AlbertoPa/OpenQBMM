phases
(
    particles
);

boundaries
{
    inlet1
    {
        type    zeroGradient;
        value   uniform 0;
    }
    inlet2
    {
        type    zeroGradient;
        value   uniform 0;
    }
    defaultFaces
    {
        type    empty;
    }
}

particles
{
    type                weightsAndAbscissae;
    weightDimension     [0 0 0 0 0 0 0];
    abscissaeDim0Dimensions       [0 1 0 0 0 0 0];
    abscissaeDim1Dimensions       [0 1 -1 0 0 0 0];

    default
    {
        node0
        {
            weight  .001;
            abscissa (0.01 1);
        }
    }
    inlet1
    {
    }
    inlet2
    {
    }
    regions
    (
        boxToCell
        {
            boxes ((0.05 0 0) (0.1 0.1 0.1));

            node0
            {
                weight  .001;
                abscissa (0.05 -1);
            }
        }
    );
}


