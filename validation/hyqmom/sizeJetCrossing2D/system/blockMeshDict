FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

x1      0.1;
x2      0.45;
x3      0.55;
x4      0.9;
W       1.0;
h       1.0;
depth   0.1;

cellSize    0.01;

nInPts       #calc "round($x1/$cellSize)";
nWallPts       #calc "round(($x2 - $x1)/$cellSize)";

nhPts       #calc "round($h/$cellSize)";
nDepthPts   1;//#calc "round($depth/$cellSize)";

vertices
(
    (   0    0      0       )   //0
    (   $x1  0      0       )   //1
    (   $x2  0      0       )   //2
    (   $x3  0      0       )   //3
    (   $x4  0      0       )   //4
    (   $W   0      0       )   //5
    (   $W   $h     0       )   //6
    (   $x4  $h     0       )   //7
    (   $x3  $h     0       )   //8
    (   $x2  $h     0       )   //9
    (   $x1  $h     0       )   //10
    (   0    $h     0       )   //11
    (   0    0      $depth  )   //12
    (   $x1  0      $depth  )   //13
    (   $x2  0      $depth  )   //14
    (   $x3  0      $depth  )   //15
    (   $x4  0      $depth  )   //16
    (   $W   0      $depth  )   //17
    (   $W   $h     $depth  )   //18
    (   $x4  $h     $depth  )   //19
    (   $x3  $h     $depth  )   //10
    (   $x2  $h     $depth  )   //21
    (   $x1  $h     $depth  )   //22
    (   0    $h     $depth  )   //23
);

blocks
(
    hex (0 1 10 11 12 13 22 23) ($nInPts $nhPts $nDepthPts) simpleGrading (1 1 1)
    hex (1 2 9 10 13 14 21 22) ($nWallPts $nhPts $nDepthPts) simpleGrading (1 1 1)
    hex (2 3 8 9 14 15 20 21) ($nInPts $nhPts $nDepthPts) simpleGrading (1 1 1)
    hex (3 4 7 8 15 16 19 20) ($nWallPts $nhPts $nDepthPts) simpleGrading (1 1 1)
    hex (4 5 6 7 16 17 18 19) ($nInPts $nhPts $nDepthPts) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    inlet1
    {
        type            patch;
        faces
        (
            (0 1 13 12)
        );
    }

    inlet2
    {
        type            patch;
        faces
        (
            (2 3 15 14)
        );
    }
    inlet3
    {
        type            patch;
        faces
        (
            (4 5 17 16)
        );
    }
    outlet
    {
        type            patch;
        faces
        (
            (11 10 22 23)
            (10 9 21 22)
            (9 8 20 21)
            (8 7 19 20)
            (7 6 18 19)
        );
    }
    walls
    {
        type            wall;
        faces
        (
            (1 2 14 13)
            (3 4 16 15)
            (11 0 12 23)
            (5 6 18 17)
        );
    }
);

mergePatchPairs
(
);

