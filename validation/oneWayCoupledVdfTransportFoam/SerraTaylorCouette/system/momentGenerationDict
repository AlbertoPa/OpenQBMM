FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      momentGenerationDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases
(
    populationBalance
);

boundaries
{
    top
    {
        type cyclic;
    }
    bottom
    {
        type cyclic;
    }
    left
    {
        type cyclic;
    }
    right
    {
        type cyclic;
    }
    front
    {
        type empty;
    }
    back
    {
        type empty;
    }
}

populationBalance
{
    type                weightsAndAbscissae;
    weightDimension     [0 0 0 0 0 0 0];
    abscissaDimension0  [0 1 0 0 0 0 0];
    abscissaDimension   [0 1 -1 0 0 0 0];

    default
    {
        node0
        {
            weight  0.00025;
            abscissa (2e-6 0 0 0);
        }
    }

}


