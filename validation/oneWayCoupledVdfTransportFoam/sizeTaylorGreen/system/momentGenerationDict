FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      momentGenerationDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases
(
    particles
);

boundaries
{
    top
    {
        type cyclic;
    }
    bottom
    {
        type cyclic;
    }
    left
    {
        type cyclic;
    }
    right
    {
        type cyclic;
    }
    front
    {
        type empty;
    }
    back
    {
        type empty;
    }
}

particles
{
    type                alphaAndDiameterVelocity;
    weightDimension     [0 -3 0 0 0 0 0];
    abscissaDimension0  [0 1 0 0 0 0 0];
    abscissaDimension   [0 1 -1 0 0 0 0];
    scale false;

    default
    {
    }

    regions
    (
        cylinderToCell
        {
            p1 (0 0.05 -0.5);
            p2 (0 0.05 0.5);
            radius 0.05;

            node0
            {
                alpha   5e-3;
                dia     1e-3;
                U       (0 0 0);
                weight  5e-3;
                abscissa (0.0001 0 0);
            }
        }
    );
}


