FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     oneWayCoupledVdfTransportFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.25;

deltaT          1e-4;

writeControl    adjustableRunTime;

writeInterval   .01;

purgeWrite      1000;

writeFormat     binary;

writePrecision  16;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;

maxCo           0.5;

maxDeltaT       1;

functions
{
    Ur
    {
        type                coded;
        functionObjectLibs  ("libutilityFunctionObjects.so");
        name                Ur;
        writeControl        timeStep;

        codeExecute
        #{
        const volVectorField& Ugas =
            mesh().lookupObject<volVectorField>("U.gas");

        const volVectorField& Uliquid =
            mesh().lookupObject<volVectorField>("U.liquid");

        volVectorField Ur
        (
            "Ur",
            Ugas - Uliquid
        );
        Ur.replace(1, Ur.component(1)/mesh().C().component(1));

        if (mesh().time().outputTime())
        {
            Ur.write();
        }


        #};
    }
}


// ************************************************************************* //
