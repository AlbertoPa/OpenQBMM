FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
type heatAndMomentumTransferTwoPhaseSystem;

phases (air water);

air
{
    type    purePhaseModel;
    diameterModel   constant;
    constantCoeffs
    {
        d               2e-3;
    }

    residualAlpha   1e-4;
}

water
{
    type    purePhaseModel;
    diameterModel   constant;
    constantCoeffs
    {
        d               1e-3;
    }

    residualAlpha   1e-4;
}

blending
{
    default
    {
        type            none;
        continuousPhase                 water;
        dispersedPhase                  air;

        maxPartlyDispersedAlpha.air     0.7;
        maxPartlyDispersedAlpha.water   0.7;
        maxFullyDispersedAlpha.air      0.2;
        maxFullyDispersedAlpha.water    0.2;

        minFullyContinuousAlpha.air     0.7;
        minPartlyContinuousAlpha.air    0.5;
        minFullyContinuousAlpha.water   0.7;
        minPartlyContinuousAlpha.water  0.5;
    }
}

sigma
(
    (air and water)     0.07
);
surfaceTension
(
    (air and water)
    {
        type            constant;
        sigma           0.07;
    }
);

aspectRatio
(
);

drag
(
    (air in water)
    {
        type            SchillerNaumann;
        residualRe      1e-4;
        swarmCorrection
        {
            type        none;
        }
    }
);

virtualMass
(
);

heatTransfer
(
);

lift
(
);

wallLubrication
(
);

turbulentDispersion
(
);

// Minimum allowable pressure
pMin            10000;


