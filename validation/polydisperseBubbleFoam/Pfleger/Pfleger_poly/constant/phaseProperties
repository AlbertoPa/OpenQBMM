FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases (air water);

air
{
    nu              1.3143e-5;
    rho             1.4;
    residualAlpha   1e-4;
    minD            1e-4;
    maxD            1e-2;
}

water
{
    nu              3.645e-7;
    rho             1000;
    residualAlpha   1e-4;
    d               1e-4;
}

blending
{
    default
    {
        type                            linear;
        maxFullyDispersedAlpha.air      0.3;
        maxPartlyDispersedAlpha.air     0.5;
        maxFullyDispersedAlpha.water    0.3;
        maxPartlyDispersedAlpha.water   0.5;
    }
}

sigma
(
    (air and water)   0.7
);

aspectRatio
(
    (air in water)
    {
        type            constant;
        E0              1.0;
    }

    (water in air)
    {
        type            constant;
        E0              1.0;
    }
);

drag
(
    (air in water)
    {
        type            SchillerNaumann;
        A               8.0;
        residualRe      1e-3;
        residualEo      1e-3;
        residualE       1e-2;
        swarmCorrection
        {
            type        none;
        }
    }

    (water in air)
    {
        type            SchillerNaumann;
        A               8.0;
        residualRe      1e-3;
        residualEo      1e-3;
        residualE       1e-2;
        swarmCorrection
        {
            type        none;
        }
    }

    (air and water)
    {
        type            segregated;
        residualRe      1e-3;
        residualAlpha   1e-4;
        m               0.5;
        n               8;
        swarmCorrection
        {
            type        none;
        }
    }
);


turbulentDispersion
(
);

virtualMass
(
    (air in water)
    {
        type            constantCoefficient;
        Cvm             0.5;
    }

    (water in air)
    {
        type            constantCoefficient;
        Cvm             0.5;
    }
);

lift
(
);

wallLubrication
(
);
