FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues ( volScalarFieldValue alpha.particles 0.0 );

regions
(
    boxToCell
    {
        box ( 0 0 -0.1 ) ( 0.15 0.5 0.1 );
        fieldValues
        (
            volScalarFieldValue alpha.particles     0
            volScalarFieldValue moment.0.particles  0
            volScalarFieldValue moment.1.particles  0
        );
    }
);

