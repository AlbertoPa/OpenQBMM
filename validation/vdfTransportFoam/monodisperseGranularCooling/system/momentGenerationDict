  \\      /  F ield         | OpenFOAM: The Open Source CFD Toolbox
   \\    /   O peration     | Website:  https://openfoam.org
    \\  /    A nd           | Version:  dev
     \\/     M anipulation  |
\*---------------------------------------------------------------------------*/
FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      momentGenerationDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases
(
    particles
);

boundaries
{
    left
    {
        type    zeroGradient;
        value   uniform 0;
    }
    right
    {
        type    zeroGradient;
        value   uniform 0;
    }
    bottom
    {
        type    cyclic;
    }
    top
    {
        type    cyclic;
    }
    front
    {
        type    cyclic;
    }
    back
    {
        type    cyclic;
    }
    defaultFaces
    {
        type    empty;
    }
}

u2 1.0;
nu2 -1.0;
u1 #calc "sqrt(0.5)";
nu1 #calc "-$u1";
w  0.025;

particles
{
    type                weightsAndAbscissae;
    weightDimension     [0 0 0 0 0 0 0];
    abscissaDimension   [0 1 -1 0 0 0 0];

    left
    {
        node0
        {
            weight  $w;
            abscissa ($u1 $u1 $u1);
        }
        node1
        {
            weight  $w;
            abscissa ($nu1 $nu1 $nu1);
        }
    }
    right
    {
        node0
        {
            weight  $w;
            abscissa ($u2 $u2 $u2);
        }
        node1
        {
            weight  $w;
            abscissa ($nu2 $nu2 $nu2);
        }
    }

    default
    {
        node0
        {
            weight  $w;
            abscissa ($u2 $u2 $u2);
        }
        node1
        {
            weight  $w;
            abscissa ($nu2 $nu2 $nu2);
        }
    }

    regions
    (
        boxToCell
        {
            box (0 0 0) (0.5 0.1 0.1);

            node0
            {
                weight  $w;
                abscissa ($u1 $u1 $u1);
            }
            node1
            {
                weight  $w;
                abscissa ($nu1 $nu1 $nu1);
            }
        }
    );
}


// ************************************************************************* //
