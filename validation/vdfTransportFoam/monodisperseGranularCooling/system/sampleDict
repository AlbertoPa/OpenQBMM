FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    location        system;
    object          sampleDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs ("libsampling.so");

setFormat raw;

surfaceFormat vtk;

interpolationScheme cell;

// Fields to sample.
fields
(
    Theta.particles
    moment.000.particles
    moment.100.particles
    moment.200.particles
    moment.010.particles
	moment.020.particles
	moment.001.particles
	moment.002.particles
	moment.110.particles
	moment.101.particles
	moment.011.particles
);


sets
(
    Centerline
    {
        type        lineCell;
        axis        x;

        start       (0 0.05 0.05);
        end         (1 0.05 0.05);
    }
);


surfaces ();

